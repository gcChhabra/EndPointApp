@{
    ViewBag.Title = "Home Page";
}


<div class="jumbotron">
    <p class="lead">This application has two end points to push data:</p>
    <p><b>http://{...}/diff/right/</b></p>
    <p><b>http://{...}/diff/left/</b></p>
    <p class="lead">And to get the comparison between the values pushed:</p>
    <p><b>http://{...}/diff/</b></p>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="row">
            <h2 class="col-md-12">Left Image URL</h2>
        </div>
        <div class="row">
            <div class="col-md-12">&nbsp;</div>
        </div>
        <div class="row">
            <input type="text" id="LeftValue" value="" class="form-control col-md-12" />
        </div>
        <div class="row">
            <div class="col-md-12">&nbsp;</div>
        </div>
        <div class="row">
            <input type="button" id="SendLeftValue" value="Send" class="btn btn-primary col-md-8" />
            <div id="SendLeftValueOK" class="col-md-4"></div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="row">
            <h2 class="col-md-12">Right Image URL</h2>
        </div>
        <div class="row">
            <div class="col-md-12">&nbsp;</div>
        </div>
        <div class="row">
            <input type="text" id="RightValue" value="" class="form-control col-md-12" />
        </div>
        <div class="row">
            <div class="col-md-12">&nbsp;</div>
        </div>
        <div class="row">
            <input type="button" id="SendRightValue" value="Send" class="btn btn-primary col-md-8" />
            <div id="SendRightValueOK" class="col-md-4"></div>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <h2 class="col-md-12 ">Get the comparison</h2>
</div>
<div class="row">
    <div class="col-md-12">&nbsp;</div>
</div>
<div class="row">
    <div id="ComparationValue" class="col-md-12 "></div>
</div>
<div class="row">
    <div class="col-md-12">&nbsp;</div>
</div>
<div class="row ">
    <input type="button" id="GetComparationValue" value="Get" class="col-md-12 btn btn-primary" />
</div>

<script language="javascript" type="text/javascript">
    _RemoteMethods = '@Url.Action("GetController")'.replace("GetController", "").replace("Home", "Diff");
</script>
<script language="javascript" type="text/javascript" src="~/Scripts/UserJS/Home.js"></script>
<script language="javascript" type="text/javascript" src="~/Scripts/UserJS/UserDefinedFunctions.js"></script>
